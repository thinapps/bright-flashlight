<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="top.thinapps.brightflashlight">

    <!-- camera controls torch; runtime permission on android 13+ -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- foreground service permissions (android 14 adds camera-specific type) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CAMERA" />

    <!-- optional: if you show non-FGS notifications, add this and request at runtime on 13+ -->
    <!-- <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> -->

    <!-- declare flashlight feature so Play/device filters behave correctly -->
    <uses-feature android:name="android.hardware.camera.flash" android:required="false" />

    <application
        android:allowBackup="false"
        android:supportsRtl="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.BrightFlashlight">

        <activity
            android:name=".ui.ScreenLightActivity"
            android:exported="false"
            android:label="@string/screen_light_title"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".torch.TorchService"
            android:exported="false"
            android:foregroundServiceType="camera" />

        <service
            android:name=".tile.TorchTileService"
            android:exported="true"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

    </application>
</manifest>
